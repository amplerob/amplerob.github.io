<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="yes" name="apple-mobile-web-app-capable">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <title><%= "Rob Sloan is rsloan39 â€¢ Digital design, UX and graphic design from Cincinnati, Ohio to Bend, Oregon" %></title>
    <meta name="description" content="<%= current_page.data.metaDescription %>" />
    <meta name="author" content="Rob Sloan http://rsloan39.com/" />

    <!-- Typekit -->
    <script src="//use.typekit.net/flo7wlq.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>

    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    <!-- Google Analytics -->
    <%= partial 'partials/google-analytics' %>
  </head>

  <body class="<%= page_classes %>">
    <header class="header-global"  role="banner">
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <%= partial 'partials/header' %>
      </nav>
    </header>
    <main role="main">
      <%= yield %>
    </main>
    <footer class="footer-global" role="contentinfo">
      <% if current_page.data.footerSimple %>
        <%= partial 'partials/footer-simple'  %>
      <% else %>
        <%= partial 'partials/footer'  %>
      <% end %>
    </footer>
  </body>
</html>
