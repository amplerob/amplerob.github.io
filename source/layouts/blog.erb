<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title><%= "rsloan39 â€“ #{current_page.data.title}" %></title>

    <!-- Typekit -->
    <script src="//use.typekit.net/flo7wlq.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>

    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <%= partial 'partials/google-analytics' %>
  </head>

  <body class="<%= page_classes %>">

    <header class="header-global" role="banner">
      <nav class="navbar navbar-default" role="navigation">
        <%= partial 'partials/header' %>
      </nav>
    </header>

    <main>
      <div class="container-fluid">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
            <div class="press-article">
              <%= image_tag(current_article.data.image, class:'img-responsive center-block', alt: current_article.data.alt) %>
              <h1 class="press-title"><%= current_article.title %></h1>
              <span class="press-source">&#183; <%= current_article.data.site %> &#183;  <% if current_article.data.author %> <%= current_article.data.author %> &#183; <% end %> <%= current_article.date.strftime('%b %e %Y') %> &#183;</span>
              <div class="press-body">
                <%= current_article.body %>
              </div>
              <p><strong>&#183; <%= link_to 'Go to original article', current_article.data.url, target: 'blank' %> &#183;</strong> <br> <%= link_to 'See all Press', '/press' %></p>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer class="footer-global">
      <div class="container-fluid">
        <%= partial 'partials/footer' %>
      </div>
    </footer>

  </body>
</html>
