<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title><%= "rsloan39 â€“ #{current_page.data.title}" %></title>

    <!-- Typekit -->
    <script src="//use.typekit.net/flo7wlq.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>

    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>

  <body class="<%= page_classes %>">

    <header class="header-global"  role="banner">
      <nav class="navbar navbar-default" role="navigation">
        <%= partial 'partials/header' %>
      </nav>
    </header>

    <main>
      <div class="container-bleed">
        <div class="jumbotron">
      		<div class="jumbotron-bg">
      			<div class="row">
      				<div class="col-md-4 col-md-offset-8 col-lg-12 col-lg-offset-0">
      					<%= image_tag current_page.data.image, class: 'img-responsive pull-right' %>
      				</div>
      			</div>
      			<div class="jumbotron-wrapper">
      				<div class="container">
      				  <div class="row">
      				    <div class="col-md-8 col-lg-7 col-lg-offset-1">
      							<h1><%= current_page.data.title %></h1>
      					    <p><%= current_page.data.description %></p>
      				    </div>
      				  </div>
      				</div>
      			</div>
      		</div>
        </div>
      	<div class="jumbotron-cta">
      		<% if current_page.data.url %>
      		<div class="container">
      			<div class="row">
      				<div class="col-lg-7 col-lg-offset-1">
      					<%= link_to 'Visit Site', current_page.data.url, class: 'btn btn-lg btn-default', target: '_blank' %>
      				</div>
      			</div>
      		</div>
      		<% end %>
      	</div>
      </div>

      <div class="container">
        <div class="row">
          <div class="col-lg-10 col-lg-offset-1">
            <div class="project-examples">
              <%= yield %>
            </div>
            <div class="project-meta">
              <h2>My Contributions</h2>
              <ul class="list-inline">
                <% current_page.data.contributions.each do |contribution| %>
                  <li><%= contribution %></li>
                <% end %>
              </ul>
              <h2>Project Topics</h2>
              <ul class="list-inline">
                <% current_page.data.topics.each do |topic| %>
                  <li><%= topic %></li>
                <% end %>
              </ul>

            </div>


          </div>
        </div>
      </div>



    </main>

    <footer class="footer-global">
      <div class="container-fluid">
        <%= partial 'partials/footer'  %>
      </div>
    </footer>

  </body>
</html>
