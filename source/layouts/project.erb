<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title><%= "rsloan39 â€“ #{current_page.data.title}" %></title>

    <!-- Typekit -->
    <script src="//use.typekit.net/flo7wlq.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>

    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <%= partial 'partials/google-analytics' %>
  </head>

  <body class="<%= page_classes %> project-detail">

    <header class="header-global"  role="banner">
      <nav class="navbar navbar-default" role="navigation">
        <%= partial 'partials/header' %>
      </nav>
    </header>

    <main>
      <div class="project-header" id="project-header">
        <p id="responsive_headline"><%= current_page.data.description %></p>
        <h1><%= current_page.data.title %></h1>
      </div>
      <div class="project-content" id="project-content">
        <div class="container">
          <div class="project-examples">
            <%= yield %>
          </div>
          <div class="project-topics">
            <div class="row">
              <div class="col-md-3">
                <h2>My Part</h2>
                <ul class="list-inline project-list">
                  <% current_page.data.roles.each do |role| %>
                    <li><%= role %></li>
                  <% end %>
                </ul>
                <h2>Project Topics</h2>
                <ul class="list-inline project-list">
                  <% current_page.data.topics.each do |topic| %>
                    <li><%= topic %></li>
                  <% end %>
                </ul>
              </div>
              <div class="col-md-8 col-md-offset-1">
                <h2>Of Note</h2>
                <p><%= current_page.data.note %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer class="footer-global">
      <%= partial 'partials/footer'  %>
    </footer>

  </body>
</html>

